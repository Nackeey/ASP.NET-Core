@using Microsoft.AspNetCore.Identity
@model PandaStorage.ViewModels.LoginViewModel

<h1 class="text-center text-torshia">Login</h1>
<hr class="bg-panda w-50 hr-2" />
<form class="mx-auto w-50" method="post" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Username" class="text-torshia"></label>
        <input asp-for="Username" class="form-control" placeholder="Username...">
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="text-torshia"></label>
        <input asp-for="Password" class="form-control" placeholder="Password...">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="checkbox">
            <label asp-for="RememberMe"></label>
            <input asp-for="RememberMe" />
        </div>
    </div>
    <div class="button-holder d-flex justify-content-center">
        <button type="submit" class="btn bg-panda text-white">Login</button>
    </div>
</form>