@model Eventures.ViewModels.EventViewModels.CreateEventViewModel

<h1 class="text-center" style="font-size: 25px"><strong>Create Event</strong></h1>
<hr class="hr-eventures-blue-2" style="width: 50%" />
<form class="mx-auto w-50" method="post" asp-controller="Events" asp-action="Create">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="row">
        <div class="form-group text-center col">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" placeholder="Name...">
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-group text-center col">
            <label asp-for="Place"></label>
            <input asp-for="Place" class="form-control" placeholder="Place...">
            <span asp-validation-for="Place"></span>
        </div>
    </div>
    <hr class="hr-eventures-blue-2" style="width: 100%" />
    <div class="row">
        <div class="form-group text-center col">
            <label asp-for="Start"></label>
            <input asp-for="Start" class="form-control" placeholder="Start date...">
            <span asp-validation-for="Start"></span>
        </div>
        <div class="form-group text-center col">
            <label asp-for="End"></label>
            <input asp-for="End" class="form-control" placeholder="End date...">
            <span asp-validation-for="End"></span>
        </div>
    </div>
    <hr class="hr-eventures-blue-2" style="width: 100%" />
    <div class="row">
        <div class="form-group text-center col">
            <label asp-for="TotalTickets"></label>
            <input asp-for="TotalTickets" class="form-control" placeholder="Number of total tickets...">
            <span asp-validation-for="TotalTickets"></span>
        </div>
        <div class="form-group text-center col">
            <label asp-for="PricePerTicket"></label>
            <input asp-for="PricePerTicket" class="form-control" placeholder="Price per ticket...">
            <span asp-validation-for="PricePerTicket"></span>
        </div>
    </div>
    <hr class="hr-eventures-blue-2" style="width: 100%" />
    <div class="button-holder mt-4 d-flex justify-content-center">
        <button type="submit" class="btn bg-eventures text-black">Create</button>
    </div>
</form>